<div class="main-container">
  <div class="edit-container">
    <h1><i class="fas fa-chess"> </i>What game do you want to add Bichon?<i class="fas fa-chess"></i> </h1>
    <div class="edit-form-container">
      <%= simple_form_for @game do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :min_player %>
        <%= f.input :max_player %>
        <%= f.input :category %>
        <%= f.input :photo, as: :file, class: "choose-photo" %>
        <%= f.submit 'Create Game', class: "btn btn-flat" %>
      <% end %>
    </div>
  </div>
</div>

