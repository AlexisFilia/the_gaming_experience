<p>la vue avec la liste</p>

<div>
  <%= form_tag game_sessions_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a city or/and a date"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>


<% @game_sessions.each do |game_session| %>
  <p><%= game_session.game.name %></p>
  <p><%= game_session.date %></p>
  <p><%= game_session.creator.email %></p>
<% end %>
