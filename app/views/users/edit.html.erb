<h1 class="edit-title">
  <% if @user.username != nil && @user.username != "" %>
    Dear <%= @user.username %>, welcome to your profile!
  <% else %>
    Putain mais t'as mÃªme pas de Username!!! Vas y, remplis ton profile!!
  <% end %>
</h1>

<div class="container">
  <%= simple_form_for @user do |f| %>
    <h2>User info</h2>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :username %>
    <h2>Photo</h2>
    <%= f.input :photo %>
    <h2>Adresse</h2>
    <%= f.input :phone_number %>
    <%= f.input :street_number %>
    <%= f.input :street %>
    <%= f.input :postal_code %>
    <%= f.input :city %>

    <div class="bg-transparent border-0 text-white">
      <%= f.submit 'Update your profile', class: "btn-primary" %>
    </div>
 <% end %>
</div>
